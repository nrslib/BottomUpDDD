@model WebApplication.Models.RegisterUserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>New User</h2>
@using (Html.BeginForm("Register","User")) {
    <div class="row">
        <div class="col-md-3">
            UserName
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.UserName)
        </div>
    </div>
        <div class="row">
        <div class="col-md-3">
            FirstName
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.FirstName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            FamilyName
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.FamilyName)
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Confirm"/>
}